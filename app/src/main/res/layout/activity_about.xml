    <TextView
        android:id="@+id/tvStudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID: 101484996"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
