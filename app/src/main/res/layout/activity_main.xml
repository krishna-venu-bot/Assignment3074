<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Top app bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:title="Assignment 3074"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Hours -->
    <EditText
        android:id="@+id/etHours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hours worked"
        android:inputType="numberDecimal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <!-- Rate -->
    <EditText
        android:id="@+id/etRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hourly rate"
        android:inputType="numberDecimal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/etHours"
        app:layout_constraintStart_toStartOf="@id/etHours"
        app:layout_constraintEnd_toEndOf="@id/etHours"
        android:layout_marginTop="12dp" />

    <!-- Tax rate -->
    <EditText
        android:id="@+id/etTaxRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tax rate (e.g., 0.2 for 20%)"
        android:inputType="numberDecimal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/etRate"
        app:layout_constraintStart_toStartOf="@id/etRate"
        app:layout_constraintEnd_toEndOf="@id/etRate"
        android:layout_marginTop="12dp" />

    <!-- Calculate button -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintTop_toBottomOf="@id/etTaxRate"
        app:layout_constraintStart_toStartOf="@id/etTaxRate"
        app:layout_constraintEnd_toEndOf="@id/etTaxRate"
        android:layout_marginTop="16dp" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/btnCalculate"
        app:layout_constraintStart_toStartOf="@id/btnCalculate"
        app:layout_constraintEnd_toEndOf="@id/btnCalculate"
        android:layout_marginTop="16dp" />

    <!-- Outputs -->
    <TextView
        android:id="@+id/tvPay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pay: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/divider"
        app:layout_constraintEnd_toEndOf="@id/divider"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvOvertimePay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Overtime Pay: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvPay"
        app:layout_constraintStart_toStartOf="@id/tvPay"
        app:layout_constraintEnd_toEndOf="@id/tvPay"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvTotalPay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Pay: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvOvertimePay"
        app:layout_constraintStart_toStartOf="@id/tvOvertimePay"
        app:layout_constraintEnd_toEndOf="@id/tvOvertimePay"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvTax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tax: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalPay"
        app:layout_constraintStart_toStartOf="@id/tvTotalPay"
        app:layout_constraintEnd_toEndOf="@id/tvTotalPay"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
